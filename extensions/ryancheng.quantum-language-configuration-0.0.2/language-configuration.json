{
	"comments": {
		"lineComment": "/*"
	},
	"brackets": [
		["(", ")"]
	],
	"autoClosingPairs": [
		{ "open": "(", "close": ")" },
		{ "open": "'", "close": "'", "notIn": ["comment"] },
		{ "open": "$", "close": "$", "notIn": ["comment"] }
	],
	"autoCloseBefore": ";:.,=) \n\t",
	"surroundingPairs": [
		["(", ")"],
		["'", "'"],
		["$", "$"],
	],
	"folding": {
		"markers": {
			"start": "^\\s*//\\s*#?region\\b",
			"end": "^\\s*//\\s*#?endregion\\b"
		}
	}
}
